	<select id="selectList" resultMap="resultMapObj">
		<!-- select 
			cg.*
		    ,count(c.CCG_seq)
		from CCG cg
		inner join CC c on c.CCG_seq = cg.seq
		group by
			c.CCG_seq -->
		
		select
			cg.*
		    ,(select count(c.CCG_seq) from CC c where 1=1 and c.CCG_seq = cg.seq) as count
		from CCG cg
		where 1=1
			
			<!-- <if test="shDelNy != null and !shDelNy.equals('')">AND ifcgDelNy = #{shDelNy}</if> -->
			
			<if test="shDelNy != null and !shDelNy.equals('')">AND deleteNy = #{shDelNy}</if>
			<choose>
				<when test="shOption == 1">AND seq = #{shValue}</when>
				<when test="shOption == 2">AND groupName LIKE CONCAT('%',#{shValue},'%')</when>
				<otherwise></otherwise>
			</choose>
	</select>
	
	<insert id="insert">
		INSERT INTO CCG (
			groupName
		)
		VALUES (
			#{groupName}
		)
		
		<selectKey resultType="String" keyProperty="seq" order="AFTER">
			SELECT last_insert_id()
		</selectKey>
	</insert>

</mapper>	