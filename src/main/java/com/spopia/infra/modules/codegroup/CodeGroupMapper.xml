<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spopia.infra.modules.codegroup.CodeGroupMapper">

    <resultMap id="resultMapObj" type="com.spopia.infra.modules.codegroup.CodeGroup"></resultMap>
	
	<select id="selectList" resultMap="resultMapObj">
		<!-- select 
			cg.*
		    ,count(c.CCG_seq)
		from CCG cg
		inner join CC c on c.CCG_seq = cg.seq
		group by
			c.CCG_seq -->
		
		select
			cg.*
		    ,(select count(c.CCG_seq) from CC c where 1=1 and c.CCG_seq = cg.seq) as count
		from CCG cg
	</select>

</mapper>	